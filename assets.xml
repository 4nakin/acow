	<!-- Tilesets -->

	<!-- Level tileset, used for generating the map -->
	<tileset id="level-tiles" tile_width="64" tile_height="64">
		<image>leveltiles.png</image>

		<!-- Note - what follows with the indices is a result of a
		     (hopefully temporary) hack that creates self-randomizing
		     tilesets. Each entry in the index table has equal chance
		     of being selected, so adding more instances of a
		     particular index will make that index much more likely to
		     be picked.  -->

		<tile id="water" index="1,1,2,2,3,3,3,3,3,3,3,3,3,3,3,3,3,3" />
		<tile id="grass" index="4,5,6,7,8,9,9,9,9,9,9,9,9,9,9,9,9,9,9,9" />
		<tile id="bank-up" index="16,17,18" />
		<tile id="bank-upright" index="42,43,44" />
		<tile id="bank-right" index="13,14,15" />
		<tile id="bank-downright" index="33,34,35" />
		<tile id="bank-down" index="19,20,21" />
		<tile id="bank-downleft" index="36,37,38" />
		<tile id="bank-left" index="22,23,21" />
		<tile id="bank-upleft" index="39,40,41" />
		<tile id="bank-inner-upright" index="31,32" />
		<tile id="bank-inner-downright" index="25,26" />
		<tile id="bank-inner-downleft" index="27,28" />
		<tile id="bank-inner-upleft" index="29,30" />

	</tileset>

