<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

   <!-- Global settings -->
	<global>

		<debug>false</debug>  <!-- Set to 'false' to play the game properly.. If true, a lot of "guts" are visible -->

		<!-- used for twitter button -->
		<url>http://acow.nonstop-games.com</url>

		<initialCowProbability>0.1</initialCowProbability>

		<description>
			Build up your castle and defense against fierce enemies that sometimes fire cows, how many rounds can you survive?

			Note: no cows were harmed during the creation of the game.
		</description>

		<phaseTimeLimit build="60" placement="15" battle="120" />
		<numCannons initial="2" perWave="0.8" perTower="2" max="22" />
		<cannonballs scaleMin="0.6" scaleMax="1.4" />
		<cannonballViewOffset x="8" y="-60" />
		<megaCowBulletProbability>0.2</megaCowBulletProbability>
		<cowTransportProbability>0.4</cowTransportProbability>

		<wallHealth>1</wallHealth> <!-- Health of a standard wall tile, in Alpha version... -->

		<grid width="32" height="32" />

		<enemies>     <!-- Number of enemies in game -->
			<ships      initial="2" perWave="1.5" />
			<transports initial="2" perWave="0.8" />
			<cows initial="1" perWave="0.3" />
			<soldiers   min="3" max="5" />   <!-- number of soldiers deployed per transport ship -->
		</enemies>

	</global>

	<!-- User interface settings -->
	<ui>
		<camera zoomStep="10" friction="0.25" />
		<shelf dragReturnTime="250" r="0" g="0" b="0" a="0.25" />
		<fingerSize>45</fingerSize>
		<messageDisplayTime>0.8</messageDisplayTime> <!-- Number of seconds to display messages -->
		<scoreDisplayTime>6.0</scoreDisplayTime>       <!-- Game over score text display time -->
		<buildQueue>
			<color r="0" g="0" b="0" a="0.25" />
			<items>2</items> <!-- Number of items to display in build queue -->
		</buildQueue>

		<pauseScreen>
			<opacity>0.85</opacity>
		</pauseScreen>

		<!-- The darkening effect used on the map during build and
		     placement phases -->
		<buildBackground>
			<opacity>0.25</opacity>
		</buildBackground>

		<!-- Font settings -->
		<fonts>
			<bigButtonFont name="Ruslan Display" size="25" />
			<phaseNameFont name="Macondo Swash Caps" size="25" />
			<scoreFont name="Macondo Swash Caps" size="25" />
			<pauseScreenFontSmall name="Macondo Swash Caps" size="25" />
			<pauseScreenFontLarge name="Ruslan Display" size="25" />
		</fonts>
	</ui>

	<!-- Visual effect controls -->
	<effects>
		<scoreMarker>
			<color r="255" g="255" b="255" a="255" />
			<outline r="0" g="0" b="0" a="128">true</outline>
			<glow r="64" g="255" b="255" a="255" radius="15">true</glow> <!-- Glow is disabled on mobile due to a rendering bug -->
			<font name="Arial" size="30" />
			<position offset_x="0" offset_y="0" />
			<movement delta_x="0" delta_y="55" duration="2500" />
		</scoreMarker>

		<damageMarker>
			<!-- Damage markers only follow the set color for the
			     player; enemy damage markers are always bright red
			     -->
			<color r="255" g="168" b="0" a="255" />
			<outline r="0" g="0" b="0" a="128">true</outline>
			<glow r="255" g="255" b="255" a="255" radius="10">false</glow> <!-- Glow is disabled on mobile due to a rendering bug -->
			<font name="Arial" size="18" />
			<position offset_x="0" offset_y="0" />
			<movement delta_x="0" delta_y="55" duration="2250" />
		</damageMarker>

		<clouds num="25" enabled="false">
			<height min="100" max="500" />
			<shadows>true</shadows>
		</clouds>

		<smoke>
			<!-- Placeholder -->
		</smoke>
	</effects>

	<!-- Cannon type defs -->
	<cannons>
		<basic>
			<health>5</health>
			<damage variance="0.35">1.2</damage>   <!-- Average hit points taken per hit -->
			<speed>400</speed>                     <!-- Bullet speeed in pixels per second -->
			<muzzleOffset x="17" y="15" />         <!-- Offset for where the cannonball visual should be spawned -->
			<accuracy>45</accuracy>                <!-- How many pixels off the actual target is (depends on distance) -->
			<range>1400</range>                    <!-- Maximum distance the cannon will fire -->
		</basic>
		<improved>
			<health>10</health>
			<damage variance="0.5">4</damage>
			<speed>1500</speed>
		</improved>
		<advanced>
			<health>20</health>
			<damage variance="1.0">6</damage>
			<speed>800</speed>
		</advanced>
		<monster>
			<health>40</health>
			<damage variance="2.0">10</damage>
			<speed>1200</speed>
		</monster>
	</cannons>

	<!-- Wall type defs -->
	<walls>
		<basic>
			<health>2</health>
		</basic>
		<improved>
			<health>4</health>
		</improved>
	</walls>

	<!-- Friendly unit type defs -->
	<units>

		<!-- Placeholder -->

		<!-- Friendly soldier def -->
		<soldier>
			<health>1.25</health>
			<damage>0.75</damage>
			<range>20</range>
			<accuracy>45</accuracy>
			<speed min="10" max="12" />
			<reloadTime>0.5</reloadTime>
			<targets>troops</targets>
		</soldier>

	</units>

	<!-- Enemy type defs -->
	<enemies>

		<!-- Cannon ship/frigate -->
		<ship>
			<health>3.5</health>          <!-- Total health -->
			<reloadTime>2.5</reloadTime>    <!-- Time between shots -->
			<damage variance="0.25">1.1</damage>            <!-- Damage pre shot -->
			<range>750</range>            <!-- Range (radius of targeting circle, in world points) -->
			<accuracy>50</accuracy>       <!-- How many pixels off this enemy can shoot (radius) -->
			<score>250</score>            <!-- Amount of points awarded for kill -->
			<speed min="30" max="40" />   <!-- Movement speed in pixels per second -->
			<targets>wall</targets>
			<scale>0.75</scale>
		</ship>

		<!-- Troop transport ship -->
		<transport>
			<health>5</health>            <!-- Total health -->
			<reloadTime>2</reloadTime>    <!-- Time between shots -->
			<damage>0</damage>
			<range>120</range>            <!-- Range (radius of targeting circle, in world points) -->
			<accuracy>25</accuracy>       <!-- How many pixels off this enemy can shoot (radius) -->
			<score>300</score>            <!-- Amount of points awarded for kill -->
			<scorePerSoldier>30</scorePerSoldier> <!-- Score per undeployed soldier killed with the transport -->
			<speed min="40" max="60" />
			<targets>troops</targets>
			<scale>0.9</scale>
			<shoreOffset x="20" y="0" />
			<unloadOffset x="-20" y="0" />
			<soldierCapacity min="2" max="5" />
			<unloadDelay>1.5</unloadDelay>
		</transport>

		<!-- Cow transport ship -->
		<cowTransport>
			<cowzillaProbability>0.08</cowzillaProbability>
			<megacowProbability>0.2</megacowProbability>
			<santacowProbability>0.5</santacowProbability>
		</cowTransport>

		<!-- Basic land troop params -->
		<soldier>
			<health>2</health>
			<reloadTime>0.5</reloadTime>
			<range>32</range>
			<damage variance="0.15">0.3</damage>
			<score>50</score>
			<accuracy>50</accuracy>
			<speed min="18" max="25" />
			<targets>troops,cannons,wall</targets>
			<scale>1</scale>
			<moveDelay>1.0</moveDelay>	<!-- Time to idle between finding new waypoints -->
			<attackDelay>1.0</attackDelay> <!-- Time to wait between attacks (or rather, time between hits getting registered) -->
			<deathDelay>0.5</deathDelay> <!-- Time to keep corpse on screen after death animation completes.. -->
			<waypointOffset>128</waypointOffset> <!-- Radius offset to received coordinates (for more randomness) -->
			<maxWalkDistance>100</maxWalkDistance> <!-- Maximum distance to walk -->
		</soldier>

		<!-- THE mighty cow -->
		<cow>
			<health>2</health>
			<reloadTime>0.5</reloadTime>
			<range>32</range>
			<score>20</score>
			<speed min="20" max="30" />
			<scale>1</scale>
			<moveDelay>0.5</moveDelay>	<!-- Time to idle between finding new waypoints -->
			<deathDelay>0.5</deathDelay> <!-- Time to keep corpse on screen after death animation completes.. -->
			<waypointOffset>500</waypointOffset> <!-- Radius offset to received coordinates (for more randomness) -->
			<mooDelay>2.0</mooDelay> <!-- Time to wait while mooing -->
			<mooProbability>0.1</mooProbability>
		</cow>

	</enemies>

</configuration>
